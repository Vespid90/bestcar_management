<odoo>
    <data>
        <record id="view_vehicle_model_search" model="ir.ui.view">
            <field name="name">vehicle.model.search</field>
            <field name="model">vehicle.model</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="brand_id"/>
                    <field name="type_id"/>
                    <group expand="1" string="Group By">
                        <filter name="group_by_brand" string="Manufacturer" context="{'group_by': 'brand_id'}"/>
                        <filter name="group_by_type" string="Type" context="{'group_by': 'type_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="view_model_brand_form" model="ir.ui.view">
            <field name="name">vehicle.model.form</field>
            <field name="model">vehicle.model</field>
            <field name="arch" type="xml">
                <form string="Model make">
                    <sheet>
                        <group>
                            <field name="brand_id"/>
                            <field name="name"/>
                            <field name="type_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_vehicle_model_list" model="ir.ui.view">
            <field name="name">vehicle.model.list</field>
            <field name="model">vehicle.model</field>
            <field name="arch" type="xml">
                <list string="Vehicles">
                    <field name="name"/>
                </list>
            </field>
        </record>
        <record id="action_vehicle_model" model="ir.actions.act_window">
            <field name="name">Models</field>
            <field name="res_model">vehicle.model</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_vehicle_model_search"/>
            <field name="context">{'search_default_group_by_brand':1}
            </field>
        </record>
        <menuitem id="menu_vehicle_model"
                  name="Models"
                  parent="menu_vehicle_configuration"
                  action="action_vehicle_model"
                  sequence="2"/>
    </data>
</odoo>