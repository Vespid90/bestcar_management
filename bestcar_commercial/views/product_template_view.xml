<odoo>
    <data>
        <record id="new_vehicle_view_from" model="ir.ui.view">
            <field name="name">vehicle.form.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" placeholder="Car"/>
                            <field name="image" widget="image" class="oe_avatar"/>
                            <field name="is_new"/>
                            <field name="is_used"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="new_vehicle_view_kanban" model="ir.ui.view">
            <field name="name">Product.template.kanban</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_kanban_view"/>
            <field name="arch" type="xml">
                <kanban>
                    <t t-name="card">
                        <field name="image" widget="image" class="oe_avatar"/>
                        <field name="name"/>
                    </t>
                </kanban>
            </field>
        </record>
        <record id="open_view_new_vehicle_action" model="ir.actions.act_window">
            <field name="name">New vehicle</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">kanban,form</field>
<!--            <field name="context">{'is_new': True}</field>-->
        </record>
        <record id="open_view_used_vehicle_action" model="ir.actions.act_window">
            <field name="name">Used vehicle</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">kanban,form</field>
<!--            <field name="context">{'is_used': True}</field>-->
        </record>
        <menuitem id="new_vehicle_menu"
                  name="New vehicle"
                  parent="bestcar_commercial_vehicle_menu"
                  action="open_view_new_vehicle_action"
                  sequence="0"/>
        <menuitem id="used_vehicle_menu"
                  name="Used vehicle"
                  parent="bestcar_commercial_vehicle_menu"
                  action="open_view_used_vehicle_action"
                  sequence="1"/>
    </data>
</odoo>