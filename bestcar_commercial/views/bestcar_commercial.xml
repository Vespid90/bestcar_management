<odoo>
    <data>
        <record id="bestcar_commercial_view_form" model="ir.ui.view">
            <field name="name">bestcar.commercial.form</field>
            <field name="model">bestcar.commercial</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <!--                        <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>-->
                        <!--                        <field name="image" widget="image" class="oe_avatar"/>-->
                        <div class="oe_title">
                            <h1>
                                <field name="name" invisible="0" placeholder="Book's name"/>
                            </h1>
                        </div>
                        <group string="book's information">
                            <group>
                                <field name="name" invisible="0"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="open_view_bestcar_commercial_action" model="ir.actions.act_window">
            <field name="name">Catalogue</field>
            <field name="res_model">bestcar.commercial</field>
            <field name="view_mode">form</field>
        </record>
        <menuitem id="bestcar_commercial_root"
                  name="Bestcar"
                  web_icon="bestcar_commercial,static/description/icon.png"
                  sequence="0"
        />
        <menuitem id="bestcar_commercial_catalogue"
                  name="Bestcar"
                  parent="bestcar_commercial_root"
                  sequence="1"
                  action="open_view_bestcar_commercial_action"
        />
    </data>
</odoo>
