<odoo>
    <record id="action_open_rfq" model="ir.actions.act_window">
        <field name="name">Request For Quotations</field>
        <field name="res_model">purchase.order</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="purchase.purchase_order_kpis_tree"/>
        <field name="domain">[('company_id.name','=','BestCar')]</field>

    </record>
    <record id="action_open_orders" model="ir.actions.act_window">
        <field name="name">Purchase Orders</field>
        <field name="res_model">purchase.order</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="purchase.purchase_order_view_tree"/>
        <field name="domain">[('state','=','purchase'),('company_id.name','=','BestCar')]</field>
    </record>
    <menuitem
            id="menu_orders_rfq"
            name="Request For Quotations"
            parent="bestcar_purchase_menu"
            action="action_open_rfq"/>
    <menuitem
            id="menu_purchase_orders"
            name="Purchase Orders"
            parent="bestcar_purchase_menu"
            action="action_open_orders"/>
</odoo>
