<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <!-- HTML preview -->
  <record id="action_vehicle_sheet_html" model="ir.actions.report">
    <field name="name">Vehicle Sheet (HTML)</field>
    <field name="model">product.template</field>
    <field name="report_type">qweb-html</field>
    <field name="report_name">bestcar_commercial.report_vehicle_sheet_html</field>
    <field name="report_file">bestcar_commercial.report_vehicle_sheet_html</field>
    <field name="print_report_name">'Vehicle Sheet (HTML)'</field>
    <field name="binding_model_id" ref="product.model_product_template"/>
    <field name="binding_type">report</field>
  </record>

  <!-- PDF -->
  <record id="action_vehicle_sheet_pdf" model="ir.actions.report">
    <field name="name">Vehicle Sheet</field>
    <field name="model">product.template</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">bestcar_commercial.report_vehicle_sheet_pdf</field>
    <field name="report_file">bestcar_commercial.report_vehicle_sheet_pdf</field>
    <field name="print_report_name">'Vehicle Sheet (PDF)'</field>
    <field name="binding_model_id" ref="product.model_product_template"/>
    <field name="binding_type">report</field>
  </record>

</odoo>
